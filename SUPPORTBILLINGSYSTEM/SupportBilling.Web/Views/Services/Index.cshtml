@model List<SupportBilling.Web.Models.ServiceDto>

<h1 class="text-center my-4">Servicios</h1>

<a href="@Url.Action("Create", "Services")" class="btn btn-primary mb-3">Agregar Servicio</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Id</td>
                <td>@service.Name</td>
                <td>@service.Price.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Edit", "Services", new { id = service.Id })" class="btn btn-warning btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", "Services", new { id = service.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
