@model IEnumerable<SupportBilling.Web.Models.ServiceViewModel>

@{
    ViewData["Title"] = "Services List";
}

<h1>Services List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th> <!-- Columna para los botones de acción -->
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.Price.ToString("C")</td>
                <td>
                    <!-- Botón de editar -->
                    <a href="@Url.Action("Edit", "Services", new { id = service.Id })" class="btn btn-warning btn-sm">Edit</a>

                    <!-- Formulario para eliminar el servicio -->
                    <form asp-controller="Services" asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@service.Id" />
                        <input type="hidden" name="_method" value="DELETE" />  <!-- Esto simula el método DELETE -->
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Services")" class="btn btn-primary">Create New Service</a>

