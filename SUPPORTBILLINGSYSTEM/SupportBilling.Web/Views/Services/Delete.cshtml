@model SupportBilling.Web.Models.ServiceDto

<h1 class="text-center my-4">Eliminar Servicio</h1>

<p>¿Está seguro que desea eliminar el servicio <strong>@Model.Name</strong>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Services")" class="btn btn-secondary">Cancelar</a>
</form>
