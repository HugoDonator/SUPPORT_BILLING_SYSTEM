@model SupportBilling.Web.Models.InvoiceDto

<h1>Detalles de Factura</h1>

<p><strong>Cliente:</strong> @Model.ClientName</p>
<p><strong>Fecha:</strong> @Model.InvoiceDate.ToShortDateString()</p>
<p><strong>Total:</strong> @Model.TotalAmount.ToString("C")</p>
<p><strong>Estado:</strong> @Model.Status</p>

<h3>Detalles</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Servicio</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.Details)
        {
            <tr>
                <td>@detail.ServiceName</td>
                <td>@detail.Quantity</td>
                <td>@detail.Price.ToString("C")</td>
                <td>@detail.TotalPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
