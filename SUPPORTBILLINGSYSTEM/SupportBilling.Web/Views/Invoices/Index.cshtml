@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@model List<SupportBilling.Web.Models.InvoiceDto>

<h2>Lista de Facturas</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Agregar Factura</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>Total</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.Id</td>
                    <td>@invoice.ClientName</td>
                    <td>@invoice.Total.ToString("C")</td>
                    <td>@invoice.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-info">Detalles</a>
                        @if (invoice.Status != "Pagada")
                        {
                            <a asp-action="MarkAsPaid" asp-route-id="@invoice.Id" class="btn btn-success">Marcar como Pagada</a>

                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No hay facturas registradas.</td>
            </tr>
        }
    </tbody>
</table>
