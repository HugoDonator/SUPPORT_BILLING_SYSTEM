@model IEnumerable<SupportBilling.Web.Models.ClientViewModel>

@{
    ViewData["Title"] = "Clients List";
}

<h1 class="text-center mb-4">Clients List</h1>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th> <!-- Columna para los botones de acción -->
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.Email</td>
                    <td>@client.Phone</td>
                    <td>
                        <!-- Botón de editar -->
                        <a href="@Url.Action("Edit", "Clients", new { id = client.Id })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                        <!-- Botón de eliminar -->
                        <form asp-controller="Clients" asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@client.Id" />
                            <input type="hidden" name="_method" value="DELETE" />  <!-- Esto simula el método DELETE -->
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Botón para crear nuevo cliente -->
<a href="@Url.Action("Create", "Clients")" class="btn btn-primary">
    <i class="fas fa-plus"></i> Create New Client
</a>
