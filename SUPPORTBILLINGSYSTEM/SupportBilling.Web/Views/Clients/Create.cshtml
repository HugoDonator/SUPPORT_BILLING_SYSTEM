@model SupportBilling.Web.Models.ClientViewModel

@{
    ViewData["Title"] = "Create Client";
}

<h1>Create Client</h1>

<div class="row">
    <div class="col-md-6">
        <!-- Resumen de errores globales -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Formulario -->
        <form asp-controller="Clients" asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter client name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter client email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Create</button>
            <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
        </form>
    </div>
</div>

<!-- Scripts de validación del lado del cliente -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
