<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupportBilling</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet"> <!-- Corregido aquí -->
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white vh-100 p-3" style="width: 250px;">
            <h4 class="text-white text-center mb-4">SupportBilling</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white active" href="/"><i class="bi bi-house-door-fill"></i> Inicio</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/Clients"><i class="bi bi-people-fill"></i> Clientes</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/Services"><i class="bi bi-gear-fill"></i> Servicios</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/Invoices"><i class="bi bi-file-earmark-text-fill"></i> Facturas</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="/Reports"><i class="bi bi-graph-up"></i> Reportes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Settings"><i class="bi bi-gear"></i> Configuración</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <header class="bg-light shadow-sm p-3">
                <nav class="navbar navbar-expand navbar-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/">Inicio</a>
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/Privacy">Privacidad</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <main class="p-4">
                @RenderBody()
                @RenderSection("Scripts", required: false)
            </main>
        </div>
    </div>
    <footer class="text-center py-3 bg-light border-top">
        <p>© 2024 - SupportBilling - <a href="/Privacy">Privacidad</a></p>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
